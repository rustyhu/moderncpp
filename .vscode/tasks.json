{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Current File - g++",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-std=c++11",
                "-pthread",
                "-Wall",
                "-Wno-deprecated",
                // "-O2",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "Current File - gcc",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-std=c99",
                "-Wall",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        }
    ]
}